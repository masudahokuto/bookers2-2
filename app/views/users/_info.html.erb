<table class='table'>
  <tr><%= image_tag user.get_profile_image(100, 100)%></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %>
  </tr>
</table>
<div class="row">
  <%= link_to(edit_user_path(user), class: "btn btn-outline-secondary btn-block mt-4") do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>